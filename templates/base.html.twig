<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Streamify{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/icon.png') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <a href="{{ path('home') }}">
                <h1><img src="{{ asset('images/logo.png') }}" alt="Logo Streamify"></h1>
            </a>
            <nav>
                <ul>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    {%  if is_granted('IS_AUTHENTICATED') %}
                        <li><a href="{{ path('_list') }}">Catalogue</a></li>
                    {% endif %}
                    {%  if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('_create') }}">Nouvelle série</a></li>
                    {% endif %}
                    {%  if is_granted('ROLE_MODERATOR') %}
                        <li><a href="{{ path('season_create') }}">Nouvelle saison</a></li>
                    {% endif %}
                    {%  if is_granted('IS_AUTHENTICATED') %}
                        <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                    {% endif %}
                </ul>
            </nav>
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

        </header>
        {% block body %}{% endblock %}
    </body>
</html>
