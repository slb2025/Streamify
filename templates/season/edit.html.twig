{% extends 'base.html.twig' %}

{% block body %}
    {# Ajoutez cette ligne pour utiliser les styles Bootstrap pour le formulaire #}
    {% form_theme season_form 'bootstrap_5_layout.html.twig' %}

    <h1>
        {% if mode == 'create' %}
            Créer une nouvelle saison
        {% else %}
            Mettre à jour la saison
        {% endif %}
    </h1>

    <div class="row justify-content-center">
        <div class="col-6">
            {{ form(season_form) }}
        </div>
    </div>
{% endblock %}